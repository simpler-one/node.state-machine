{
  "name": "@working-sloth/state-machine",
  "version": "0.3.0",
  "description": "State Machine for NodeJS",
  "main": "dist/index.js",
  "scripts": {
    "build": "rimraf dist && tsc -p src",
    "test-pre": "rimraf spec/built && tsc -p spec",
    "test": "rimraf spec/built && tsc -p spec && istanbul cover node_modules/jasmine/bin/jasmine.js",
    "remap-test": "cat coverage/coverage.json | ./node_modules/.bin/remap-istanbul > coverage/coverage-remap.json",
    "remap-test:win": "type coverage\\coverage.json | .\\node_modules\\.bin\\remap-istanbul > coverage\\coverage-remap.json && del coverage\\coverage.json && ren coverage\\coverage-remap.json coverage.json",
    "exec": "ts-node -P .config/tsconfig.base.json --files"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/work-work-komei/node.state-machine.git"
  },
  "keywords": [
    "fsm",
    "finite state machine",
    "automaton",
    "puml",
    "PlantUML",
    "sloth",
    "lazy",
    "diligent"
  ],
  "author": "Hiroaki Kobayashi",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/work-work-komei/node.state-machine/issues"
  },
  "homepage": "https://github.com/work-work-komei/node.state-machine#readme",
  "dependencies": {
    "rxjs": "^6.5.2"
  },
  "devDependencies": {
    "@types/jasmine": "^3.3.13",
    "jasmine": "^3.4.0",
    "remap-istanbul": "^0.13.0",
    "rimraf": "^2.6.3",
    "ts-node": "^8.3.0",
    "typescript": "^3.5.2"
  }
}
